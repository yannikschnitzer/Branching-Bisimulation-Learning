MODULE main
    VAR x : integer;
    
    DEFINE terminated := x <= 0;

    TRANS (terminated           & next(x) = x)
        | (!terminated          & next(x) = x - 1)
        | (!terminated & x >= 3 & next(x) = x + 1)
        | (!terminated & x <  3 & next(x) = x - 1)
        ;
    
    LTLSPEC (x = 2 -> F(terminated))

    

