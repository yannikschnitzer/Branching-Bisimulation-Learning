MODULE main
    VAR x : integer;
    VAR y : integer;
    
    DEFINE terminated := x <= 0;

    TRANS ((terminated           & next(x) = x)
        | (!terminated          & next(x) = x - 1)
        | (!terminated & x >= y & next(x) = x + 1)
        | (!terminated & x <  y & next(x) = x - 1))
        & next(y) = y
        ;
    
    --LTLSPEC (x < y -> F(terminated))
    LTLSPEC (x > 0 -> F(terminated))
    --LTLSPEC (x < y -> G F(terminated))
    LTLSPEC (G F(terminated))

    