MODULE main
    VAR a : --65536..65535;
    VAR r : --65536..65535;
    VAR n : --65536..65535;

    INIT r = 0;
    INIT n >= 16;

    TRANS (next(a) = a & next(r) = r & next(n) = n)
        | (n > 0
            & next(a) = 1 & next(r) = r & next(n) = n - 1)
        | (n <= 0
            & next(a) = 1 & next(r) = 1 & next(n) = n)
        ;



    