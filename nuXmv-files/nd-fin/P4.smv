MODULE main
    VAR a: --65536..65535;
    VAR r: --65536..65535;
    VAR n: --65536..65535;

    INIT a = 1 & r = 0 & n > 100;

    TRANS (next(a) = a & next(r) = r & next(n) = n)
        | (next(a) = 1 & next(r) = (next(n) <= 0 ? 1 : 0) & next(n) = n - 1)
        | (next(a) = 1 & next(r) = (next(n) <= 0 ? 1 : 0) & next(n) = n)
        ;